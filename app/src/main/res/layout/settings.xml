<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginTop="1dp"
            android:id="@+id/id_req_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mute_text"
                android:layout_alignRight="@+id/id_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mute"
                android:textSize="20dp" />

            <TextView
                android:layout_marginTop="25dp"
                android:layout_below="@id/mute_text"
                android:id="@+id/id_request"
                android:text="@string/id_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                />

            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/color_request"
                android:text="@string/color_request"
                android:layout_below="@+id/id_request"
                android:layout_alignRight="@+id/id_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/color_req_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/muteSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />

            <EditText
                android:layout_marginTop="17dp"
                android:id="@+id/user_id_group_determiner"
                android:layout_below="@+id/muteSwitch"
                android:textSize="20dp"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"/>

            <Spinner
                android:id="@+id/starter_color_spinner"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/user_id_group_determiner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/selective_push_button"
        android:layout_marginTop="10dp"
        android:text="@string/selective_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>